<div>
  {{question-detail question=model update="update"}}

  {{#if model.answers}}
    <h3 class='answer-tile'>Answers:</h3>
  {{/if}}

  {{#each sortedAnswers as |answer|}}
    {{answer-tile answer=answer updateAnswer="updateAnswer"}}
  {{else}}

  {{/each}}

  {{new-answer saveAnswer="saveAnswer" question=model}}
</div>
