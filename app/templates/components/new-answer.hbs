<form>
  <h3>Answer this Question</h3>
  <div class='form-group'>
    <label for='content'>Your Answer:</label>
    {{textarea value=content id='content' rows='5' class='form-control'}}
  </div>
  <div class='form-group'>
    <label for='author'>Your name:</label>
    {{input value=author id='author' class='form-control'}}
  </div>
  <button {{action 'saveAnswer'}} class='btn btn-default'>Submit</button>
</form>
